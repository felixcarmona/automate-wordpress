description "Blog hhvm fastcgi server"
start on runlevel [2345]
stop on runlevel [06]
# set max file descriptors to 65536 (soft/hard)
limit nofile 65536 65536

respawn

script
        chdir {{ blog_path }}
        exec hhvm --mode server -vServer.Type=fastcgi -vServer.Port={{ hhvm_server_port }} >> "{{ hhvm_server_log_directory }}/hhvm.log"
end script